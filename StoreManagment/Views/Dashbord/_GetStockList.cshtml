@model IEnumerable<StoreManagment.ViewModel.Add_ItemVM>

<div style="margin:25px;">
    <h4 style="color:forestgreen;">Item List</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="ItemTable">
            <thead>
                <tr>
                    <th style="min-width: 50px;">S.No</th>
                    <th style="min-width: 100px;">Item</th>
                    <th style="min-width: 100px;">Serial-No</th>
                    <th style="min-width: 80px;">Quantity</th>
                    <th style="min-width: 80px;">Price</th>
                    <th style="min-width: 100px;">Selling Price</th>
                    <th style="min-width: 100px;">Expiry Date</th>
                    <th style="min-width: 120px;">Category</th>
                    <th style="min-width: 120px;">Sub-Product</th>
                    <th style="min-width: 100px;">Add Date</th>
                    <th style="min-width: 100px;">Update Date</th>
                    <th style="min-width: 70px;">Delete</th>
                    <th style="min-width: 70px;">Edit</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int recordNumber = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@recordNumber</td>
                        <td style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.Item_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item_SerialNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item_Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item_Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item_Selling_Price)</td>
                        <td>@item.Item_Expiry_Date?.ToString("dd/MM/yyyy")</td>
                        <td style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                        <td style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.SubProduct)</td>
                        <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.UpdatedDate?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <button class="btn btn-outline-danger btn-sm" id="DeleteItem" data-id="@item.ItemId">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-outline-success btn-sm" id="EditItem" data-id="@item.ItemId">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </td>
                    </tr>
                    recordNumber++;
                }
            </tbody>
        </table>
    </div>
</div>
