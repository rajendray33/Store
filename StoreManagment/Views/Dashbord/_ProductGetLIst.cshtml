@model IEnumerable<StoreManagment.ViewModel.AddProductVM>

<div style="margin:25px;">
    <h4 style="color:forestgreen;">Product Category List</h4>
    <hr />
    <table class="table" id="Categorytbl">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Product Name</th>
                <th>Add Date</th>
                <th>Update Date</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>

            @{
                int recordNumber = 1; // Initialize a counter variable
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@recordNumber</td>
                    @Html.HiddenFor(modelItem => item.P_Id)
                    <td style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.Product_Category)</td>
                    <td>@item.CreateDate?.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td>@item.UpdateDate?.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td>
                        <button class="btn btn-outline-danger" id="DeleteCategory" data-id="@item.P_Id"><i class="bi bi-trash3"></i></button>
                    </td>
                    <td>
                        <h3>
                            <button class="btn btn-outline-success" id="EditProductCategory" data-id="@item.P_Id"><i class="bi bi-pencil"></i></button>
                        </h3>
                    </td>
                </tr>
                recordNumber++;
            }
        </tbody>
    </table>
</div>