@model StoreManagment.ViewModel.AddProductVM


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="bg-light p-3" style="margin:10px;padding:15px;">
                                <form>
                                    <div class="row mb-3">
                                        <div class="col-sm-8">
                                            <input asp-for="Product_Category" class="form-control" id="CategoryName" placeholder="Product Name">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <button type="button" class="btn btn-success" id="AddProductBtn">Add Product</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="ProductListContainer"></div>
            </div>

        </div>
    </div>
</section>
<div id="EditCategoryPopup"></div>
