@model IEnumerable<StoreManagment.ViewModel.Add_ItemVM>

    <style>
    #ItemTable th, #ItemTable td {
        padding: 8px;
        text-align: left;
        vertical-align: middle;
    }

    #ItemTable th {
        background-color: #f2f2f2;
    }

    #ItemTable td {
        white-space: nowrap; /* Prevents text from wrapping */
    }

    </style>
<div style="margin:25px;">
    <h4 style="color:forestgreen;">Item Recored</h4>
    <hr />
    <table class="table" id="ItemTable">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Item Name</th>
                <th>Category</th>
                <th>Serial Number</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Selling Price</th>
                <th>Expiry Date</th>
                <th>Added Date</th>
                <th>Updated Date</th>
                @*                <th>Delete</th>
                <th>Edit</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                int recordNumber = 1; // Count Record Number
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@recordNumber</td>
                    @Html.HiddenFor(modelItem => item.ItemId)
                    <td style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.Item_Name)</td>
                    <td style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                    <td>@Html.DisplayFor(modelItem => item.Item_SerialNumber)</td>
                    <td>@item.Item_Quantity</td>
                    <td>@item.Item_Price</td>
                    <td>@item.Item_Selling_Price</td>
                    <td>@item.Item_Expiry_Date?.ToString("dd/MM/yyyy")</td>
                    <td>@item.CreatedDate?.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td>@item.UpdatedDate?.ToString("dd/MM/yyyy hh:mm tt")</td>
                    @*  <td>
                <button class="btn btn-outline-danger" id="DeleteItem" data-id="@item.ItemId"><i class="bi bi-trash3"></i></button>
                </td>
                <td>
                <button class="btn btn-outline-success" id="EditItem" data-id="@item.ItemId"><i class="bi bi-pencil"></i></button>
                </td>*@
                </tr>
                recordNumber++;
            }
        </tbody>
    </table>

</div>